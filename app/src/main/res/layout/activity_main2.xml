<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/t1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:autofillHints="false"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"

        />




    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_marginBottom="52dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="clearBtn"
                android:text="C"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/openBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="openBtn"
                android:text="("
                android:textSize="20dp" />

            <Button
                android:id="@+id/pBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="pBtn"
                android:text="%"
                android:textSize="20dp" />
            <Button
                android:id="@+id/closeBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="closeBtn"
                android:text=")" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="deleteBtn"
                android:text="Del"
                android:textAllCaps="false"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
                app:layout_constraintEnd_toEndOf="parent" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/factBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="factBtn"
                android:text="!"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tgBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="tgBtn"
                android:text="tg"
                android:textAllCaps="false"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/cosBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="cosBtn"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/sinBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="sinBtn"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/divisionBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="divisionBtn"
                android:text="/" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="nineBtn"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/powBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="powBtn"
                android:text="^" />

            <Button
                android:id="@+id/expBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="expoBtn"
                android:text="exp"
                android:textAllCaps="false"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/logBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="lnBtn"
                android:textSize="15dp"
                android:text="ln"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/produitBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="produitBtn"
                android:text="x"
                android:textAllCaps="false"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="fiveBtn"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sixBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="sixBtn"
                android:text="6" />

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="sevenBtn"
                android:text="7" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="eightBtn"
                android:text="8" />

            <Button
                android:id="@+id/moinsBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="moinsBtn"
                android:text="-" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/oneBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="oneBtn"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/twoBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="twoBtn"
                android:text="2" />

            <Button
                android:id="@+id/threeBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="threeBtn"
                android:text="3" />

            <Button
                android:id="@+id/forBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="forBtn"
                android:text="4" />

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="plusBtn"
                android:text="+" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/racineBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="racineBtn"
                android:text="√"
                android:textSize="20dp" />

            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="zeroBtn"
                android:text="0" />

            <Button
                android:id="@+id/pointBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="pointBtn"
                android:text="." />

            <Button
                android:id="@+id/piBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="piBtn"
                android:textAllCaps="false"
                android:text="π" />

            <Button
                android:id="@+id/equalBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="equalBtn"
                android:text="=" />
        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>