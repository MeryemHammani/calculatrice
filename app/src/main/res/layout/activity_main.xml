<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="clearBtn"
                android:text="C"
                android:textSize="20dp" />

            <Button
                android:id="@+id/divisionBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="divisionBtn"
                android:text="รท"
                android:textSize="20sp" />

            <Button
                android:id="@+id/produitBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="produitBtn"
                android:text="x"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="Del"
                android:textAllCaps="false"
                android:background="@drawable/circle"
                android:onClick="deleteBtn"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="sevenBtn"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="eightBtn"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="nineBtn"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/moinsBtnBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="moinsBtn"
                android:text="-"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bforBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="forBtn"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="fiveBtn"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sixBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="sixBtn"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="plusBtn"
                android:text="+"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/oneBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="oneBtn"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/twoBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="twoBtn"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/threeBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="threeBtn"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/pBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="pBtn"
                android:text="%"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/piBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="piBtn"
                android:text="ฯ"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="zeroBtn"
                android:text="0"
                android:textSize="20dp" />

            <Button
                android:id="@+id/pointBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="pointBtn"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/equalBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:onClick="equalBtn"
                android:text="="
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/t1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="0"
        android:autofillHints="false"
        android:textAlignment="textEnd"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"

        />

</androidx.constraintlayout.widget.ConstraintLayout>